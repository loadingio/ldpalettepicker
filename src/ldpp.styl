.ldpp
  position: relative
  width: 640px
  height: 600px
  margin: auto
  overflow:hidden

.ldpp
  position: relative
  width: 100%
  height: 100%

.ldpp .navbar
  position: absolute
  z-index: 1
  top: 0
  left: 0
  padding: 30px 40px 25px
  margin-bottom: 20px
  border-bottom: 1px solid #eee
  background: #fff
  width: 100%
  .inner
    width: 100%
  .nav-link
    cursor: pointer

.ldpp div[data-panel=view] .ldp, .ldpp div[data-panel=mypal] .ldp
  width: calc(50% - 20px)
  margin: 0 10px 5px
  padding: 10px 10px 2px
  .name
    font-size: .875em
    text-align: left

for num in (1..3)
  .ldpp .panel:nth-child({num})
    transform: translate(100% * (num - 1),0) translateZ(1px)

.ldpp .panels
  position: relative
  transition: transform 0.5s ease-in-out
  width: 100%
  height: 100%
  text-align: center

.ldpp .panel
  position: absolute
  top: 0
  left: 0
  padding: 110px 10px 20px
  width: 100%
  height: 100%
  overflow-y: scroll
  &.active
    display: block
  & > .inner
    text-align: center
  & > .inner:after
    content: " "
    display: inline-block
    width: 280px
    height: 1px
    margin: 0 10px 11px


.ldpp .panel[data-panel=edit]
  padding-bottom: 0
  .edit > .inner
    padding: 20px 20px 0
  .ldp
    margin: 7px 0
    padding: 0 20px 0

.ldpp .panel[data-panel=edit], .ldpe
  .ldp
    width: 100%
    .name
      display: none
    .colors
      height: 120px
      border: 1px solid #fff
      border-radius: 5px
      box-shadow: 0 2px 4px rgba(0,0,0,.2)
      overflow: visible
    .color:first-child
      border-radius: 5px 0 0 5px
    .color:last-child
      border-radius: 0 5px 5px 0
    .color
      transition: flex 0.3s ease-in-out
      position: relative
      &.dark *[data-action]
        color: #fff
      *[data-action]
        opacity: 0
        width: 20px
        margin: auto
        height: 100%
        text-align: center
        display: flex
        flex-direction: column
        justify-content: space-around
        color: #444
        i
          flex: 0 0 auto
          cursor: pointer
      &.active *[data-action]
        opacity: 1
      &.active
        transform: scale(1.02)
        border-radius: 3px
        border: 2px solid #000
        box-shadow: inset 0 0 0 4px rgba(255,255,255,1), 0 2px 4px 0 rgba(0,0,0,0.3)
        z-index: 1
        position: relative
        &:after
          content: " "
          width: 20px
          height: 20px
          position: absolute
          bottom: 0
          transform: translate(-50%,50%) rotate(45deg)
          background: currentColor
          left: 50%
          display: block
          box-shadow: 2px 2px 2px rgba(0,0,0,.1)
          border-right: 2px solid rgba(0,0,0,.2)
          border-bottom: 2px solid rgba(0,0,0,.2)
          display: none


.ldpp .panel[data-panel=edit], .ldpe
  .ldColorPicker
    width: 100%
    height: calc(10.9875em + 1rem - 7px)
    display: inline-block
    vertical-align: top
    margin-top: 0
    .ldcp-panel
      padding: 0
  .value
    margin: 1.2125em 0 0.1em
  .value:last-child
    margin-bottom: 0
  .edit
    text-align: left
    margin-top: 0
    & > .inner
      padding-top: 20px
  & > .foot
    padding: 0 20px
    width: 100%
    text-align: left
  .ldrs
    margin-top: -3px
  .label-group
    position: relative
    font-size: 0.75em
    line-height: 1.75em

.ldpp .panel[data-panel=mypal] .btn-load
  position: relative
  width: 50%
  margin: 20px auto
  cursor: pointer

.ldpe .ldp
  padding: 0
  margin: 0

.ldpp, .ldpe
  .row.config
    display: none
    &.active
      display: flex

.ldpe .ldColorPicker
  z-index: 1!important

.ldp
  display: inline-block
  position: relative
  .colors
    cursor: pointer
    position: relative
    box-shadow: 0 0 0 1px rgba(255,255,255,1), 0 0 1px 1px rgba(0,0,0,.2)
    width: 100%
    border-radius: 3px
    overflow: hidden
    display: flex
    flex-wrap: nowrap
  .color
    flex: 1 1 0
    display: inline-block
    width: 0
    height: 100%
  .color:first-child, .ctrl + .color
    border-radius: 3px 0 0 3px
  .color:last-child
    border-radius: 0 3px 3px 0
  .ctrl
    position: absolute
    z-index: 1
    display: flex
    flex-wrap: nowrap
    justify-content: center
    padding: 3px
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,.5)
    opacity: 0
    transition: opacity ease-in-out 0.2s
    text-align: center
    *[data-action]
      color: rgba(255,255,255,.7)
      height: 100%
      flex: 1 1 0
      line-height: 1em
      font-size: .8em
      display: flex
      text-decoration: none
      i { font-size: 1.1em; margin-bottom: .1em }
      /* for vertically, horizontally aligning content */
      align-items: center
      justify-content: center
      /* make contents flow top-down. */
      flex-direction: column
    *[data-action]:hover
      color: #fff
      background: rgba(255,255,255,.3)
    *[data-action]:first-child, .ctrl + *[data-action]
      border-radius: 3px 0 0 3px
    *[data-action]:last-child
      border-radius: 0 3px 3px 0


  .name
    text-transform: capitalize
    width: 100%
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
  &:hover .ctrl
    opacity: 1
    opacity: 1

.ldp
  width: 15em
.ldp .colors
  height: calc(1.5em + .75rem + 2px)

.ldp.ldp-sm
  font-size: .875rem
.ldp.ldp-sm .colors
  /* workaround
  it should be plus 2px, but sometimes ldp will be higher due to rounding.
  minus 0.3px to make it feel better in common font size ( 18px, 16px )
  */
  height: calc(1.5em + .5rem + 1.7px)

.ldp.ldp-lg
  font-size: 1.25rem
.ldp.ldp-lg .colors
  height: calc(1.5em + 1rem + 2px)
